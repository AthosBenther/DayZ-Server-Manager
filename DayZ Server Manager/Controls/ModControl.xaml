<UserControl x:Class="DayZ_Server_Manager.Controls.ModControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DayZ_Server_Manager.Controls"
             mc:Ignorable="d" 
             >
    <Grid Name="ModInfo">
        <StackPanel>
            <TextBlock Name="Title" FontWeight="Bold" Margin="2 5">Mod Title</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="2 0 5 5">Last updated:</TextBlock>
                <TextBlock Name="Updt" Margin="0 0 5 0">Alala</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
