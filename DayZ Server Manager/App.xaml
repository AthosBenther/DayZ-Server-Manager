<Application x:Class="DayZ_Server_Manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DayZ_Server_Manager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="DiagBtn" TargetType="Button">
            <Setter Property="Margin" Value="5 2"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>
        <Style x:Key="DiagLabel" TargetType="TextBlock">
            <Setter Property="Margin" Value="0 5 0 2"/>
        </Style>
        <Style x:Key="CheckLabel" TargetType="CheckBox">
            <Setter Property="Margin" Value="0 5 0 2"/>
        </Style>
    </Application.Resources>
</Application>
